@model IEnumerable<Sale>


@if (Model.Count()>0)
{
    <div class="container">
        <table class="table">
            <thead>
            <th>Buyer Name</th>
            <th>Product</th>
            <th>Price</th>
            <th>Income</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Buyer.Name  @item.Buyer.LastName</td>
                        <td>@item.Product.Name</td>
                        <td>
                            <span class="btn btn-danger btn-sm">
                                @item.Product.Price
                            </span>
                        </td>
                        <td class="text-success">
                            +@item.Product.Price
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else{
    <h1 class="lead">
        You have not sales yet
    </h1>
}
