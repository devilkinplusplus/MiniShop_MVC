@model IEnumerable<Sale>

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table">
            <thead>
            <th>Seller Name</th>
            <th>Product</th>
            <th>Price</th>
            <th>Cost</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Seller.Name  @item.Seller.LastName</td>
                        <td>@item.Product.Name</td>
                        <td>
                            <span class="btn btn-danger btn-sm">
                                @item.Product.Price
                            </span>
                        </td>
                        <td class="text-danger">
                            -@item.Product.Price
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else{
    <h1 class="lead">
        You have not buy yet
    </h1>
}