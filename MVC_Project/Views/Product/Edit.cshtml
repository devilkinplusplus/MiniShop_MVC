@model Product

<div class="continer">
    <form method="post" class="form-control">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" required value="@Model.Name" />
        <br />

        <label>Category</label>
        <select asp-items="@ViewBag.categoryValues" asp-for="@Model.CategoryID"
                class="form-control" required>
            <option>Select a category</option>
        </select>
        <br />
        <label>Description</label>
        <input type="text" asp-for="@Model.Description" class="form-control" required value="@Model.Description" />
        <br />

        <label>Price</label>
        <input type="number" asp-for="@Model.Price" class="form-control" required value="@Model.Price" />
        <br />

        <label>Stock</label>
        <input type="number" asp-for="@Model.Stock" class="form-control" required value="@Model.Stock" />
        <br />


        <input type="submit" class="btn btn-info" value="Save" />

    </form>
</div>