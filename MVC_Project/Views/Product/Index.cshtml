@model IEnumerable<Product>

<div class="container">
    <table class="table">
        <thead>
        <th>Name</th>
        <th>Category</th>
        <th>Description</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Shop</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category.Name</td>
                    <td>
                        @(item.Description.Length > 50 ? item.Description.Substring(0, item.Description.Substring(0, 50).LastIndexOf(" ")) + "..." : item.Description + "...")
                    </td>
                    <td>@item.Price azn</td>
                    <td>@item.Stock</td>
                    <td>
                        <a href="/Shop/buy/@item.ProductID" class="btn btn-outline-danger btn-sm">Shop Now!</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/product/create" class="btn btn-success">Create</a>
</div>